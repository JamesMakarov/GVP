<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: gray;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controladores.listadeguardaroupas.ListaGRControlador">
   <center>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <ToolBar prefHeight="40.0" prefWidth="774.0" style="-fx-background-color: gray;">
              <items>
                <Button fx:id="adicionar" mnemonicParsing="false" style="-fx-background-color: black;" text="➕ Adicionar guarda-roupa" textFill="#00ff40">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font></Button>
                  <Button fx:id="remover" mnemonicParsing="false" style="-fx-background-color: black;" text="➖ Remover item" textFill="RED">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Button>
              </items>
            </ToolBar>
            <ListView fx:id="lista" prefHeight="530.0" prefWidth="800.0" />
         </children>
      </VBox>
   </center>
   <top>
      <Label fx:id="label" text="Escolha um guarda roupa" textFill="WHITE" BorderPane.alignment="CENTER">
         <font>
            <Font size="26.0" />
         </font>
      </Label>
   </top>
</BorderPane>
