<AnchorPane prefHeight="586.0" prefWidth="774.0" style="-fx-background-color: #000000;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <!-- Cartão central suave -->
        <Pane layoutX="190.0" layoutY="113.0" prefHeight="360.0" prefWidth="360.0" style="-fx-background-color: #ffffff; -fx-border-radius: 12; -fx-background-radius: 20;">
            <children>

                <!-- Botão de login com estilo moderno -->
                <Button layoutX="23.0" layoutY="279.0" mnemonicParsing="false" prefHeight="57.0" prefWidth="315.0" style="-fx-text-fill: #000000; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 12; -fx-border-radius: 12; -fx-padding: 8 24 8 24; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.2), 3, 0.5, 0, 1); -fx-background-color: #34b4b5; -fx-border-color: #288f91;" text="Entrar" textAlignment="CENTER" />

                <!-- Título -->
                <Label layoutX="106.0" layoutY="21.0" text="Cadastrar">
                    <font>
                        <Font name="Calibri" size="38.0" />
                    </font>
                </Label>
            <VBox layoutX="27.0" layoutY="71.0" prefHeight="200.0" prefWidth="307.0" spacing="10.0">
               <children>
                  <TextField prefHeight="57.0" prefWidth="315.0" promptText="Username" style="-fx-background-color: #ffffff; -fx-border-color: #288f91; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #333333; -fx-font-size: 14px;">
                     <effect>
                        <Blend />
                     </effect>
                     <font>
                        <Font size="31.0" />
                     </font>
                  </TextField>
      
                      <!-- Campo de usuário -->
                      <TextField prefHeight="58.0" prefWidth="187.0" promptText="Gênero" style="-fx-background-color: #ffffff; -fx-border-color: #288f91; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #333333; -fx-font-size: 14px;">
                          <effect>
                              <Blend />
                          </effect>
                          <font>
                              <Font size="31.0" />
                          </font>
                      </TextField>
                  <TextField prefHeight="57.0" prefWidth="315.0" promptText="Altura" style="-fx-background-color: #ffffff; -fx-border-color: #288f91; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: #333333; -fx-font-size: 14px;">
                     <effect>
                        <Blend />
                     </effect>
                     <font>
                        <Font size="31.0" />
                     </font>
                  </TextField>
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </VBox>
            </children></Pane>

        <!-- Texto e link para cadastro -->
        <Text fill="WHITE" layoutX="318.0" layoutY="522.0" text="Já fez seu cadastro?" />
        <Hyperlink layoutX="351.0" layoutY="525.0" style="-fx-text-fill: #00BFFF; -fx-underline: true;" text="Login" />
    </children>
</AnchorPane>
